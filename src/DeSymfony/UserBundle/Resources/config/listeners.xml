<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://symfony.com/schema/dic/services
  http://symfony.com/schema/dic/services/services-1.0.xsd">

  <parameters>
    <parameter key="de_symfony_user.request_listener.class">DeSymfony\UserBundle\EventListener\RequestListener</parameter>
    <parameter key="de_symfony_user.user_listener.class">DeSymfony\UserBundle\EventListener\UserListener</parameter>
  </parameters>

  <services>
    <service id="de_symfony_user.request_listener" class="%de_symfony_user.request_listener.class%">
      <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="255" />
      <tag name="monolog.logger" channel="desymfony" />

      <argument type="service" id="logger" />
    </service>

    <service id="de_symfony_user.user_listener" class="%de_symfony_user.user_listener.class%">
      <tag name="desymfony_user.event_listener" event="desymfony.pre_user_save" method="onPreUserSave" priority="1" />
    </service>
  </services>
</container>
