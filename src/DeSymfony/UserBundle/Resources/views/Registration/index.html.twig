{% extends 'DeSymfonyUserBundle::layout.html.twig' %}

{% block title %}deSymfony 2012 - Registro de usuario{% endblock %}

{% block body %}
  <h1>Registro usuario</h1>

  {% if app.session.hasFlash('info') %}
    <div class="alert alert-success">
      <strong>{{ app.session.flash('info') }}</strong>
    </div>
  {% endif %}

  <form method="post" class="well form-inline" action="{{ path('registration_save') }}">
    <div class="input-prepend">
      <span class="add-on">@</span><input type="email" size="30" name="email" class="span2">
    </div>
    <button type="submit" class="btn">registrar</button>
  </form>

  {% render 'DeSymfonyUserBundle:Registration:listUsers' %}
{% endblock %}
